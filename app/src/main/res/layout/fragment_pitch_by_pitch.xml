<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gamViewLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/material_blue_500">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20pt"
                android:text="Visitor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="20pt"
                android:textAllCaps="true"
                android:text="Home"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20pt"
                android:text="0"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="20pt"
                android:textAllCaps="true"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="20pt"
                android:id="@+id/innTypeView"
                android:text="InnType"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ballView"
                android:textSize="15pt"
                android:text="B "
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/innTypeView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ballCountView"
                android:textSize="20pt"
                android:text="#B"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/ballView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/strikeView"
                android:textSize="15pt"
                android:text="S "
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/ballCountView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/strikeCountView"
                android:textSize="20pt"
                android:text="#S"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/strikeView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/outView"
                android:textSize="15pt"
                android:text="O "
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/strikeCountView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/outCountView"
                android:textSize="20pt"
                android:text="#O"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/outView"/>
            </RelativeLayout>
            </LinearLayout>
    </LinearLayout>


</RelativeLayout>
